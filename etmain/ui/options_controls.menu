	BIND( 8, MOVE_Y+64, (SUBWINDOW_WIDTH)-4, 10, _("Lean Left:"), .2, 8, "+leanleft", "" )
	BIND( 8, MOVE_Y+76, (SUBWINDOW_WIDTH)-4, 10, _("Lean Right:"), .2, 8, "+leanright", "" )
	BIND( 8, MOVE_Y+88, (SUBWINDOW_WIDTH)-4, 10, _("Jump:"), .2, 8, "+moveup", "" )
