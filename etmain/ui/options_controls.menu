// Chat //
#define CHAT_Y (SELECTWEAPONS_Y + SELECTWEAPONS_H + SUBWINDOW_Y_PADDING)
#define CHAT_H 76
	SUBWINDOW(SUBWINDOWS_X2_START, CHAT_Y, SUBWINDOW_HEADER_WIDTH, CHAT_H, _("CHAT") )
	BIND(SUBWINDOWS_OPTION_X2_START, CHAT_Y+16, SUBWINDOW_WIDTH, 10, _("Chat:"), .2, 8, "messagemode", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, CHAT_Y+28, SUBWINDOW_WIDTH, 10, _("Team Chat:"), .2, 8, "messagemode2", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, CHAT_Y+40, SUBWINDOW_WIDTH, 10, _("Fireteam Chat:"), .2, 8, "messagemode3", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, CHAT_Y+52, SUBWINDOW_WIDTH, 10, _("Quick Chat:"), .2, 8, "mp_QuickMessage", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, CHAT_Y+64, SUBWINDOW_WIDTH, 10, _("Fireteam Quick Chat:"), .2, 8, "mp_fireteammsg", "" )

// Input //
#define INPUT_Y (CHAT_Y + CHAT_H + SUBWINDOW_Y_PADDING)
#define INPUT_H 64
#define INPUT_CHECKBOX_WIDTH (.5 * (SUBWINDOW_WIDTH - 6))
	SUBWINDOW(SUBWINDOWS_X2_START, INPUT_Y, SUBWINDOW_HEADER_WIDTH, INPUT_H, _("INPUT") )
	CHECKBOXALIGNXACTION(SUBWINDOWS_OPTION_X2_START, INPUT_Y+16, INPUT_CHECKBOX_WIDTH, 10,_("Invert Mouse:"), .2, 24, 8, "ui_mousePitch", uiScript update ui_mousePitch, _("Invert mouse pitch") )
	CHECKBOXALIGNX(SUBWINDOWS_OPTION_X2_START+(INPUT_CHECKBOX_WIDTH)+2, INPUT_Y+16, INPUT_CHECKBOX_WIDTH, 10, _("Smooth Mouse:"), .2, 24, 8, "m_filter", _("Smooth out the mouse using interpolation") )
	CVARFLOATLABEL(SUBWINDOWS_OPTION_X2_START, INPUT_Y+28, SUBWINDOW_WIDTH, 10, "sensitivity", .2, ITEM_ALIGN_RIGHT, $evalfloat((SUBWINDOW_WIDTH)-6), 8 )
	SLIDER(SUBWINDOWS_OPTION_X2_START, INPUT_Y+28, SUBWINDOW_WIDTH, 10, _("Mouse Sensitivity:"), .2, 8, "sensitivity" 5 1 30, _("Set mouse sensitivity") )
	MULTI(SUBWINDOWS_OPTION_X2_START, INPUT_Y+40, SUBWINDOW_WIDTH, 10, _("Mouse Pitch:"), .2, 8, "m_pitch", cvarFloatList { "0.015 (lowest allowed)" 0.0151 "0.016" 0.016 "0.017" 0.017 "0.018" 0.018 "0.019" 0.019 "0.020" 0.020 "0.021" 0.021 "0.022 (default)" 0.022 }, _("Set crosshair up-down motion while moving") )
    CVARFLOATLABEL(SUBWINDOWS_OPTION_X2_START, INPUT_Y+52, SUBWINDOW_WIDTH, 10, "cg_scopedSensitivityScaler", .2, ITEM_ALIGN_RIGHT, $evalfloat((SUBWINDOW_WIDTH)-6), 8 )
    SLIDER(SUBWINDOWS_OPTION_X2_START, INPUT_Y+52, SUBWINDOW_WIDTH, 10, _("Scoped Sensitivity:"), .2, 8, "cg_scopedSensitivityScaler" 5 0 30, _("Set scoped mouse sensitivity. The value is a scalar used to calculate the sensitivity\ndepending on field of view when scoped(zoom value)") )

// Miscellaneous //
#define MISC_Y (INPUT_Y + INPUT_H + SUBWINDOW_Y_PADDING)
#define MISC_H 90
	SUBWINDOW(SUBWINDOWS_X2_START, MISC_Y, SUBWINDOW_HEADER_WIDTH, MISC_H, _("MISCELLANEOUS") )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+16, SUBWINDOW_WIDTH, 10, _("Vote Yes:"), .2, 8, "vote yes", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+28, SUBWINDOW_WIDTH, 10, _("Vote No:"), .2, 8, "vote no", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+40, SUBWINDOW_WIDTH, 10, _("Ready:"), .2, 8, "ready", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+52, SUBWINDOW_WIDTH, 10, _("Not Ready:"), .2, 8, "notready", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+64, SUBWINDOW_WIDTH, 10, _("Take Screenshot:"), .2, 8, "autoScreenshot", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, MISC_Y+76, SUBWINDOW_WIDTH, 10, _("Record Replay:"), .2, 8, "toggleRecord", "" )


// Buttons //
	BUTTON(SUBWINDOWS_X_START, WINDOW_HEIGHT-24, .33*(WINDOW_WIDTH-24), 18, _("BACK"), .3, 14, close options_controls ; open options )
	BUTTON(SUBWINDOWS_X_START+.33*(WINDOW_WIDTH-24)+6, WINDOW_HEIGHT-24, .34*(WINDOW_WIDTH-24), 18, _("ADVANCED"), .3, 14, close options_controls ; open options_controls_advanced )
	BUTTON(SUBWINDOWS_X_START+.33*(WINDOW_WIDTH-24)+6+.34*(WINDOW_WIDTH-24)+6, WINDOW_HEIGHT-24, .33*(WINDOW_WIDTH-24), 18, _("DEFAULT"), .3, 14, open options_controls_default )
}
