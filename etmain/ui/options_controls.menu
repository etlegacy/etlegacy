#include "ui/menudef.h"
#include "ui/menumacros.h"

// Defines //
#define WINDOW_X	  16
#define WINDOW_Y	  16
#define WINDOW_WIDTH  608
#define WINDOW_HEIGHT 448
#define GROUP_NAME	  "grpOptionsControls"

// Subwindows //
#define SUBWINDOWS_X_PADDING   2
#define SUBWINDOW_Y_PADDING    4
#define SUBWINDOWS_X_START     6
#define SUBWINDOWS_Y_START     32
#define SUBWINDOW_HEADER_WIDTH (.5 * (WINDOW_WIDTH - 18))
#define SUBWINDOW_WIDTH        (SUBWINDOW_HEADER_WIDTH - SUBWINDOWS_X_PADDING * 2)

#define SUBWINDOWS_OPTION_X1_START (SUBWINDOWS_X_START + SUBWINDOWS_X_PADDING)
#define SUBWINDOWS_X2_START        (SUBWINDOWS_OPTION_X1_START + SUBWINDOW_WIDTH + SUBWINDOWS_X_PADDING * 4)
#define SUBWINDOWS_OPTION_X2_START (SUBWINDOWS_X2_START + SUBWINDOWS_X_PADDING)

// Controls Menu //
menuDef {
	name		"options_controls"
	visible		0
	fullscreen	0
	rect		WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style		WINDOW_STYLE_FILLED

	onESC {
		close options_controls ;
		open options
	}

// Window //
	WINDOW( _("CONTROLS"), 90 )

// Move //
#define MOVE_Y SUBWINDOWS_Y_START
#define MOVE_H 148
	SUBWINDOW(SUBWINDOWS_X_START, MOVE_Y, SUBWINDOW_HEADER_WIDTH, 148, _("MOVE") )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+16, SUBWINDOW_WIDTH, 10, _("Forward:"), .2, 8, "+forward", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+28, SUBWINDOW_WIDTH, 10, _("Back:"), .2, 8, "+back", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+40, SUBWINDOW_WIDTH, 10,_( "Move Left:"), .2, 8, "+moveleft", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+52, SUBWINDOW_WIDTH, 10, _("Move Right:"), .2, 8, "+moveright", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+64, SUBWINDOW_WIDTH, 10, _("Lean Left:"), .2, 8, "+leanleft", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+76, SUBWINDOW_WIDTH, 10, _("Lean Right:"), .2, 8, "+leanright", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+88, SUBWINDOW_WIDTH, 10, _("Jump:"), .2, 8, "+moveup", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+100, SUBWINDOW_WIDTH, 10, _("Crouch:"), .2, 8, "+movedown", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+112, SUBWINDOW_WIDTH, 10, _("Prone:"), .2, 8, "+prone", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+124, SUBWINDOW_WIDTH, 10, _("Walk:"), .2, 8, "+speed", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, MOVE_Y+136, SUBWINDOW_WIDTH, 10, _("Sprint:"), .2, 8, "+sprint", "" )

// Use Weapons //
#define USEWEAPONS_Y (MOVE_Y + MOVE_H + SUBWINDOW_Y_PADDING)
#define USEWEAPONS_H 100
	SUBWINDOW(SUBWINDOWS_X_START, USEWEAPONS_Y, SUBWINDOW_HEADER_WIDTH, USEWEAPONS_H, _("USE WEAPONS") )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+16, SUBWINDOW_WIDTH, 10, _("Attack:"), .2, 8, "+attack", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+28, SUBWINDOW_WIDTH, 10, _("Switch to Alternate:"), .2, 8, "weapalt", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+40, SUBWINDOW_WIDTH, 10, _("Reload Weapon:"), .2, 8, "+reload", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+52, SUBWINDOW_WIDTH, 10, _("Binoculars Zoom:"), .2, 8, "+zoom", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+64, SUBWINDOW_WIDTH, 10, _("Use (Activate):"), .2, 8, "+activate", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+76, SUBWINDOW_WIDTH, 10, _("Drop Objective"), .2, 8, "dropobj", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, USEWEAPONS_Y+88, SUBWINDOW_WIDTH, 10, _("Selfkill:"), .2, 8, "kill", "" )

// Pop-Ups //
#define POPUPS_Y (USEWEAPONS_Y + USEWEAPONS_H + SUBWINDOW_Y_PADDING)
#define POPUPS_H 124
	SUBWINDOW(SUBWINDOWS_X_START, POPUPS_Y, SUBWINDOW_HEADER_WIDTH, POPUPS_H, _("POP-UPS") )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+16, SUBWINDOW_WIDTH, 10, _("Show Scores:"), .2, 8, "+scores", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+28, SUBWINDOW_WIDTH, 10, _("Show Limbo Menu:"), .2, 8, "OpenLimboMenu", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+40, SUBWINDOW_WIDTH, 10, _("Show Command Map:"), .2, 8, "+mapexpand", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+52, SUBWINDOW_WIDTH, 10, _("Compass Map Zoom In:"), .2, 8, "MapZoomIn", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+64, SUBWINDOW_WIDTH, 10, _("Compass Map Zoom Out:"), .2, 8, "MapZoomOut", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+76, SUBWINDOW_WIDTH, 10, _("Player Stats:"), .2, 8, "+stats", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+88, SUBWINDOW_WIDTH, 10, _("Top Shots:"), .2, 8, "+topshots", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+100, SUBWINDOW_WIDTH, 10, _("Objectives:"), .2, 8, "+objectives", "" )
	BIND(SUBWINDOWS_OPTION_X1_START, POPUPS_Y+112, SUBWINDOW_WIDTH, 10, _("Multiview:"), .2, 8, "mvactivate", "" )

// Select Weapons //
#define SELECTWEAPONS_Y SUBWINDOWS_Y_START
#define SELECTWEAPONS_H 136
	SUBWINDOW(SUBWINDOWS_X2_START, SELECTWEAPONS_Y, SUBWINDOW_HEADER_WIDTH, SELECTWEAPONS_H, _("SELECT CLASS AND WEAPONS") )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+16, SUBWINDOW_WIDTH, 10, _("Next Weapon:"), .2, 8, "weapnext", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+28, SUBWINDOW_WIDTH, 10, _("Previous Weapon:"), .2, 8, "weapprev", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+40, SUBWINDOW_WIDTH, 10, _("Slot 1 - Melee:"), .2, 8, "weaponbank 1", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+52, SUBWINDOW_WIDTH, 10, _("Slot 2 - One Handed:"), .2, 8, "weaponbank 2", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+64, SUBWINDOW_WIDTH, 10, _("Slot 3 - Two Handed:"), .2, 8, "weaponbank 3", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+76, SUBWINDOW_WIDTH, 10, _("Slot 4 - Grenade:"), .2, 8, "weaponbank 4", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+88, SUBWINDOW_WIDTH, 10, _("Slot 5 - Special 1:"), .2, 8, "weaponbank 5", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+100, SUBWINDOW_WIDTH, 10, _("Slot 6 - Special 2:"), .2, 8, "weaponbank 6", "" )
	BIND(SUBWINDOWS_OPTION_X2_START, SELECTWEAPONS_Y+112, SUBWINDOW_WIDTH, 10, _("Slot 7 - Special 3:"), .2, 8, "weaponbank 7", "" )
