menuDef {
	name        "options_system"
	visible     0
	fullscreen  0
	rect WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style WINDOW_STYLE_FILLED

	onOpen
	{
		uiScript systemCvarsGet ;
		uiScript vidSave ;
		uiScript glCustom ;
		uiScript parseglPreset
	}

	onESC {
		uiScript systemCvarsReset ;
		uiScript vidReset ;
		close    options_system ;
		open     options
	}

	WINDOW(_("SYSTEM"), 150)


