#include "ui/menudef.h"
#include "ui/menumacros.h"

// Defines //

#define WINDOW_X		16
#define WINDOW_Y		16
#define WINDOW_WIDTH	400
#define WINDOW_HEIGHT	452
#define GROUP_NAME		"grpOptionsCustomiseGame"
		
// Customise Game Menu //
	
menuDef {
	name		"options_customise_game"
	visible		0
	fullscreen	0
	rect		WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style		WINDOW_STYLE_FILLED
	
	onESC {
		close options_customise_game ;
		open options
	}

// Window //

	WINDOW( "GAME", 94 )
	
// Subwindows //

#define SUBWINDOW_WIDTH		WINDOW_WIDTH-12
	
// Player //
	SUBWINDOW( 6, 32, (SUBWINDOW_WIDTH), 40, "PLAYER" )
	EDITFIELD( 8, 48, (SUBWINDOW_WIDTH)-4, 10, "Player Alias:", .2, 8, "name", 36, 18, "Enter the name that you wish to be known by to others on servers" )
	MULTI( 8, 60, (SUBWINDOW_WIDTH)-4, 10, "Language:", .2, 8, "cl_language", cvarFloatList { "English (default)" 0 "French" 1 "German" 2 "Italian" 3 "Spanish" 4 "Polish" 5 "Dutch" 6 "Czech" 7 "Russian" 8 "Finnish" 9 }, "Set your desired language" )
	
// Physics //
	SUBWINDOW( 6, 74, (SUBWINDOW_WIDTH), 40, "PHYSICS" )
	YESNO( 8, 90, (SUBWINDOW_WIDTH)-4, 10, "Always Run:", .2, 8, "cl_run", "" )
	MULTI( 8, 102, (SUBWINDOW_WIDTH)-4, 10, "Double-Tap Prone:", .2, 8, "cl_doubletapdelay", cvarFloatList { "Yes" 350 "No" 0 }, "" )
	
// Weapons //
	SUBWINDOW( 6, 116, (SUBWINDOW_WIDTH), 52, "WEAPONS" )
	YESNO( 8, 132, (SUBWINDOW_WIDTH)-4, 10, "Automatic Reload:", .2, 8, "cg_autoReload", "Automatically reload when ammunition clip runs out" )
	YESNO( 8, 144, (SUBWINDOW_WIDTH)-4, 10, "Autoswitch:", .2, 8, "cg_noAmmoAutoSwitch", "Automatically switch to a new weapon when out of ammunition" )
	YESNO( 8, 156, (SUBWINDOW_WIDTH)-4, 10, "Weapon Icon Flash:", .2, 8, "cg_drawWeaponIconFlash", "Flash weapon icon when firing, reloading, or switching" )
	
// Binoculars //	FIXME - isn't this really a 'scopes' section?
	SUBWINDOW( 6, 170, (SUBWINDOW_WIDTH), 52, "SCOPE" )
	MULTI( 8, 186, (SUBWINDOW_WIDTH)-4, 10, "Use Weapon Cycle for Zoom:", .2, 8, "cg_useWeapsForZoom", cvarFloatList { "Off" 0 "On (normal)" 1 "On (reverse)" 2 }, "Weapon switch will zoom in and out while scoped, rather than switch weapons" )
	MULTI( 8, 198, (SUBWINDOW_WIDTH)-4, 10, "Default Zoom Level:", .2, 8, "cg_zoomdefaultsniper", cvarFloatList { "All the way Out" 20 "Near" 16 "Far" 8 "All the Way In" 4 }, "Set the default zoom level for scopes" )
	MULTI( 8, 210, (SUBWINDOW_WIDTH)-4, 10, "Zoom Levels:", .2, 8, "cg_zoomstepsniper", cvarFloatList { "4 Levels of Zoom" 4 "8 Levels of Zoom" 2 }, "Specifies the increments you zoom by" )
	
// Chat //
	SUBWINDOW( 6, 224, (SUBWINDOW_WIDTH), 40, "CHAT" )
	MULTI( 8, 240, (SUBWINDOW_WIDTH)-4, 10, "Quick Chat Mode:", .2, 8, "cg_quickMessageAlt", cvarFloatList { "Alpha" 0 "Numeric" 1 }, "Use alpha or numeric keys to send radio messages" )
	MULTI( 8, 252, (SUBWINDOW_WIDTH)-4, 10, "Chat Icon Time:", .2, 8, "cg_voicespritetime", cvarFloatList { "Short" 3000 "Normal" 6000 "Long" 12000 "Really Long" 24000 }, "Specify how long the chat icon appears above other players' heads" )

// Downloads //
	SUBWINDOW( 6, 266, (SUBWINDOW_WIDTH), 52, "DOWNLOADS" )
	YESNO( 8, 282, (SUBWINDOW_WIDTH)-4, 10, "Check for Updates on Start-Up:", .2, 8, "cl_autoupdate", "" )
	YESNO( 8, 294, (SUBWINDOW_WIDTH)-4, 10, "Get Missing Files from Server:", .2, 8, "cl_allowDownload", "" )
	YESNO( 8, 306, (SUBWINDOW_WIDTH)-4, 10, "Use HTTP/FTP Downloads:", .2, 8, "cl_wwwDownload", "" )
	
// Miscellaneous //
	SUBWINDOW( 6, 320, (SUBWINDOW_WIDTH), 88, "MISCELLANEOUS" )
	MULTI( 8, 336, (SUBWINDOW_WIDTH)-4, 10, "Complaint PopUp:", .2, 8, "cg_complaintPopUp", cvarFloatList { "Off" 0 "On" 1 }, "Display the option to file complaints about teammates who kill you" )
	YESNO( 8, 348, (SUBWINDOW_WIDTH)-4, 10, "Log Important Messages:", .2, 8, "cg_printObjectiveInfo", "Prints important game messages to the console" )
	MULTI( 8, 360, (SUBWINDOW_WIDTH)-4, 10, "Auto-Action:", .2, 8, "cg_autoAction", cvarFloatList { "None" 0 "Demo" 1 "Screenshot" 2 "Stats Dump" 4 "Demo + SS" 3 "Demo + Stats" 5 "SS + Stats" 6 "Demo + SS + Stats" 7 }, "Automatically performs actions at the start or end of a round" )
	YESNO( 8, 372, (SUBWINDOW_WIDTH)-4, 10, "Use JPEG for AutoScreenshots:", .2, 8, "cg_useScreenshotJPEG", "Switches between .tga and .jpg picture types for the \"autoscreenshot\" command" )
	YESNO( 8, 384, (SUBWINDOW_WIDTH)-4, 10, "Show Tool Tips :", .2, 8, "ui_showtooltips", "Display Tool Tips in the UI" )
	YESNO( 8, 396, (SUBWINDOW_WIDTH)-4, 10, "Announcer:", .2, 8, "cg_announcer", "Enables or disables the in-game Commander" )

// Buttons //
	BUTTON( 6, WINDOW_HEIGHT-24, WINDOW_WIDTH-12, 18, "BACK", .3, 14, close options_customise_game ; open options )
}
