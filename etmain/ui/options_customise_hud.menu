// Crosshair //
#define CROSSHAIR_Y 184
	SUBWINDOW(6 + (SUBWINDOW_WIDTH_L)+6, CROSSHAIR_Y, (SUBWINDOW_WIDTH_R), 130, _("CROSSHAIR"))
	MULTI(6 + (SUBWINDOW_WIDTH_L)+6 + 2, CROSSHAIR_Y + 16, (SUBWINDOW_WIDTH_R)-4, 10, _("Crosshair Size:"), .2, 8, "cg_crosshairsize", cvarFloatList { "Tiny" 24 "Small" 32 "Medium" 48 "Large" 64 "Huge" 96 }, _("Set the size of the displayed crosshair"))
