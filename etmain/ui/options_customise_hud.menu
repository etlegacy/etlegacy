// Buttons //
    BUTTON( 6, WINDOW_HEIGHT-24, .5*(WINDOW_WIDTH-24), 18, _("BACK"), .3, 14, close options_customise_hud ; open options )
    BUTTON( 6+.5*(WINDOW_WIDTH-24)+6, WINDOW_HEIGHT-24, .5*(WINDOW_WIDTH-24)+6, 18, _("MORE"), .3, 14, close options_customise_hud ; open options_customise_hud2 )
}
