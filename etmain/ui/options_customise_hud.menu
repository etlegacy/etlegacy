	CVARFLOATLABEL(6 + (SUBWINDOW_WIDTH_L)+6 + 2, CROSSHAIR_Y + 100, (SUBWINDOW_WIDTH_L)-6, 10, "cg_crosshairAlpha", .2, ITEM_ALIGN_RIGHT, $evalfloat((SUBWINDOW_WIDTH_L)-4), 8)
